/*
Complete the solution so that it reverses the string passed into it.

'world'  =>  'dlrow'
'word'   =>  'drow'
*/

function solution(str){
  // turn string into array of letters
  str = str.split('')
  
  // reverse array
  str = str.reverse()
  
  // turn back into string
  str = str.join('')
  
  return str
}
